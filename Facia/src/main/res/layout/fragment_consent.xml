<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/consentParentLayout"
    android:background="@color/facia_white_color"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/facia_white_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        android:clickable="true"
        android:fillViewport="true"
        android:focusable="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp">

            <TextView
                android:id="@+id/headingTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="bottom"
                android:lineSpacingExtra="3sp"
                android:text="@string/consent_heading"
                android:textColor="@color/facia_black_color"
                android:fontFamily="@font/inter_medium"
                android:textSize="24sp"
                app:layout_constraintHeight_percent="0.17"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/instructionsParentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/headingTxt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="22dp">

                    <ImageView
                        android:id="@id/instOneIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/ic_consnet_inst_tick"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/consentText1"/>

                    <TextView
                        android:id="@+id/consentText1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:lineSpacingExtra="3sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/instOneIcon"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/consent_str1"
                        android:textColor="@color/facia_black_color"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@id/instTwoIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/ic_consnet_inst_tick"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/consentText2"/>

                    <TextView
                        android:id="@+id/consentText2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="3sp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/consentText1"
                        app:layout_constraintLeft_toRightOf="@+id/instTwoIcon"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/consent_str2"
                        android:textColor="@color/facia_black_color"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@id/instThreeIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/ic_consnet_inst_tick"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/consentText3"/>

                    <TextView
                        android:id="@+id/consentText3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="3sp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/consentText2"
                        app:layout_constraintLeft_toRightOf="@+id/instThreeIcon"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/consent_str3"
                        android:textColor="@color/facia_black_color"
                        android:textSize="14sp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/consentAgreeParent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="12dp"
                app:layout_constraintBottom_toTopOf="@+id/continueBtn"
                app:layout_constraintEnd_toEndOf="@+id/continueBtn"
                app:layout_constraintStart_toStartOf="@+id/continueBtn"
                app:layout_constraintTop_toBottomOf="@+id/instructionsParentLayout"
                app:layout_constraintVertical_bias="1">

                <CheckBox
                    android:id="@+id/iAgreeCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:autoLink="none"
                    android:buttonTint="@color/check_box"
                    android:checked="false"
                    android:gravity="top" />

                <TextView
                    android:id="@+id/iAgreeTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/iAgreeCheckBox"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="@string/i_agree"
                    android:textColor="@color/facia_black_color"
                    android:textColorLink="@color/link_color"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_regular"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

<!--            <CheckBox-->
<!--                android:id="@+id/iAgreeCheckBox"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:autoLink="none"-->
<!--                android:buttonTint="@color/check_box"-->
<!--                android:checked="false"-->
<!--                android:fontFamily="@font/inter_regular"-->
<!--                android:gravity="clip_vertical"-->
<!--                android:paddingStart="12dp"-->
<!--                android:paddingBottom="12dp"-->
<!--                android:text="@string/i_agree"-->
<!--                android:textColor="@color/facia_black_color"-->
<!--                android:textColorLink="@color/link_color"-->
<!--                android:textSize="14sp"-->
<!--                app:layout_constraintBottom_toTopOf="@+id/continueBtn"-->
<!--                app:layout_constraintEnd_toEndOf="@+id/continueBtn"-->
<!--                app:layout_constraintStart_toStartOf="@+id/continueBtn"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/instructionsParentLayout"-->
<!--                app:layout_constraintVertical_bias="1" />-->

            <android.widget.Button
                android:id="@+id/continueBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_bg"
                android:enabled="false"
                android:alpha="0.33"
                android:fontFamily="@font/inter_medium"
                android:text="@string/continue_st"
                android:textAllCaps="false"
                android:textColor="@color/facia_white_color"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:background="@drawable/ic_consent_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="65dp"/>

    <include
        android:id="@+id/footer"
        layout="@layout/facia_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
