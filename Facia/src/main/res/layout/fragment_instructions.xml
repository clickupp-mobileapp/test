<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/instructionsBottomSheet"
    android:background="#333333"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/facia_white_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"
        android:fillViewport="true"
        android:focusable="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/resultInstScrParentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/facia_white_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="26dp">

            <TextView
                android:id="@+id/instHeadingTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:lineSpacingExtra="3sp"
                android:text="@string/instructions_heading"
                android:textColor="@color/facia_black_color"
                android:fontFamily="@font/inter_medium"
                android:textSize="18sp"
                android:layout_marginTop="22dp"
                app:layout_constraintHeight_percent="0.17"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/instructionsParentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/instHeadingTxt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="22dp">

                <ImageView
                    android:id="@id/instIcon1"
                    android:layout_width="52dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/ic_clean_cam"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/instText1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:lineSpacingExtra="3sp"
                    app:layout_constraintTop_toTopOf="@+id/instIcon1"
                    app:layout_constraintBottom_toBottomOf="@+id/instIcon1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/instIcon1"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/cam_inst_1"
                    android:textColor="@color/facia_black_color"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@id/instIcon2"
                    android:layout_width="52dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/ic_plain_bg"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/instIcon1"/>

                <TextView
                    android:id="@+id/instText2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:lineSpacingExtra="3sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/instIcon2"
                    app:layout_constraintBottom_toBottomOf="@+id/instIcon2"
                    app:layout_constraintLeft_toRightOf="@+id/instIcon2"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/cam_inst_2"
                    android:textColor="@color/facia_black_color"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@id/instIcon3"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/ic_good_light"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/instIcon2"/>

                <TextView
                    android:id="@+id/instText3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:lineSpacingExtra="3sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/instIcon3"
                    app:layout_constraintBottom_toBottomOf="@+id/instIcon3"
                    app:layout_constraintLeft_toRightOf="@+id/instIcon3"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/cam_inst_3"
                    android:textColor="@color/facia_black_color"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@id/instIcon4"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/ic_clear_face"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/instIcon3"/>

                <TextView
                    android:id="@+id/instText4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:lineSpacingExtra="3sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/instIcon4"
                    app:layout_constraintBottom_toBottomOf="@+id/instIcon4"
                    app:layout_constraintLeft_toRightOf="@+id/instIcon4"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/cam_inst_4"
                    android:textColor="@color/facia_black_color"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@id/instIcon5"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/ic_no_wearables"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/instIcon4"/>

                <TextView
                    android:id="@+id/instText5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:lineSpacingExtra="3sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/instIcon5"
                    app:layout_constraintBottom_toBottomOf="@+id/instIcon5"
                    app:layout_constraintLeft_toRightOf="@+id/instIcon5"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/cam_inst_5"
                    android:textColor="@color/facia_black_color"
                    android:textSize="14sp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/instRetryBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/ic_retry"
                android:visibility="visible"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/instructionsParentLayout"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
