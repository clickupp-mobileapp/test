    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/resultParentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/facia_white_color"
        android:visibility="gone">

        <WebView
            android:id="@+id/animationViewUpload"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:adjustViewBounds="false"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/footer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <WebView
            android:id="@+id/animationView"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:adjustViewBounds="false"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/footer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/animationBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="animationViewUpload,animationView" />

        <TextView
            android:id="@+id/resultTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/inter_semi_bold"
            android:text="@string/uploading"
            android:textAlignment="center"
            android:textColor="@color/dark_text_color"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/animationBarrier" />

        <android.widget.Button
            android:id="@+id/resultContinueBtn"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/inter_medium"
            android:text="@string/continue_st"
            android:textAllCaps="false"
            android:textColor="@color/button_text_color"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/footer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="1" />

        <include
            android:id="@+id/footer"
            layout="@layout/facia_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/resultInstScrParentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/facia_white_color"
        android:padding="26dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/facia_white_color"
            android:clickable="true"
            android:fillViewport="true"
            android:focusable="true"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@+id/instFooter"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/resultInstScrInnerParentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/facia_white_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/instHeadingTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="bottom"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/instructions_heading"
