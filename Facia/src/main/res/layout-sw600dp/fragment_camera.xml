<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cameraParentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cameraHeadingContainer">

        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/hidePreviewView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/faceParentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.facia.faciasdk.Camera.CameraXHelpers.FocusView
                android:id="@+id/faceBorder"
                android:layout_width="215dp"
                android:layout_height="280dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <WebView
                android:id="@+id/ovalTickAnimation"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@+id/faceBorder"
                app:layout_constraintBottom_toBottomOf="@+id/faceBorder"
                app:layout_constraintLeft_toLeftOf="@+id/faceBorder"
                app:layout_constraintRight_toRightOf="@+id/faceBorder"
                android:adjustViewBounds="false"/>

            <View
                android:id="@+id/faceViewLeft"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/facia_white_color"
                app:layout_constraintBottom_toTopOf="@+id/faceViewBottom"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/faceBorder"
                app:layout_constraintTop_toBottomOf="@+id/faceViewTop" />

            <View
                android:id="@+id/faceViewRight"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/facia_white_color"
                app:layout_constraintBottom_toTopOf="@+id/faceViewBottom"
                app:layout_constraintLeft_toRightOf="@+id/faceBorder"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/faceViewTop" />

            <View
                android:id="@+id/faceViewTop"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/facia_white_color"
                app:layout_constraintBottom_toTopOf="@+id/faceBorder"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/faceViewBottom"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/facia_white_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/faceBorder" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cameraInstParentLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="35dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/faceBorder"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/faceDetectInst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:paddingVertical="12dp"
                    android:text="@string/no_face_found"
                    android:textAlignment="center"
                    android:textColor="@color/dark_text_color"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="35dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/showInstBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="28dp"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_information_facia"
                    android:backgroundTint="@color/dark_text_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/docParentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/docBorder"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:clickable="false"
                android:layout_marginBottom="68dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/doc_border_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/docViewLeft"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/facia_white_color"
                app:layout_constraintBottom_toTopOf="@+id/docViewBottom"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/docBorder"
                app:layout_constraintTop_toBottomOf="@+id/docViewTop" />

            <View
                android:id="@+id/docViewRight"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/facia_white_color"
                app:layout_constraintBottom_toTopOf="@+id/docViewBottom"
                app:layout_constraintLeft_toRightOf="@+id/docBorder"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/docViewTop" />

            <View
                android:id="@+id/docViewTop"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/facia_white_color"
                app:layout_constraintBottom_toTopOf="@+id/docBorder"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/docViewBottom"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/facia_white_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/docBorder" />

            <TextView
                android:id="@+id/tryPassportTxt"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:paddingVertical="8dp"
                android:text="@string/try_passport"
                android:textAlignment="center"
                android:textColor="@color/dark_text_color"
                android:textSize="12sp"
                app:layout_constraintRight_toRightOf="@id/docBorder"
                app:layout_constraintTop_toBottomOf="@+id/docBorder"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/docInstParentLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toTopOf="@+id/docBorder"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/faceDocDetectInst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:paddingVertical="12dp"
                    android:text="@string/fit_card_in_box"
                    android:textAlignment="center"
                    android:textColor="@color/dark_text_color"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/captureDocBtn"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:visibility="gone"
                android:layout_marginBottom="25dp"
                android:backgroundTint="@color/button_bg_color"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_capture"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/docLivenessParentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ic_greyish_rectangle_bg"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/docLivenessInstTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:paddingVertical="12dp"
                    android:text="@string/doc_in_front_of_cam"
                    android:textAlignment="center"
                    android:textColor="@color/dark_text_color"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/captureDocLivenessBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="visible"
                android:layout_marginBottom="25dp"
                android:backgroundTint="@color/button_bg_color"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_capture"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/quickLivenessInst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/text_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/quickLivenessInstTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:layout_marginVertical="22dp"
                android:layout_marginHorizontal="18dp"
                android:lineSpacingExtra="3sp"
                android:text="@string/position_face_in_front_of_camera"
                android:textAlignment="center"
                android:textColor="@color/dark_text_color"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/qlCountDownTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:visibility="gone"
            android:textAlignment="center"
            android:textColor="@color/facia_white_color"
            android:paddingBottom="38dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imagePreviewParentLayout"
        android:visibility="gone"
        android:background="@color/facia_white_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/detectedFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/retakeBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <android.widget.Button
            android:id="@+id/retakeBtn"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/btn_bg_transparent"
            android:fontFamily="@font/inter_medium"
            android:text="@string/retake"
            android:textAllCaps="false"
            android:textColor="@color/light_text_color"
            android:textSize="18sp"
            android:visibility="visible"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="24dp"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintBottom_toTopOf="@+id/imgPreviewFooter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/imgContinueBtn" />

        <android.widget.Button
            android:id="@+id/imgContinueBtn"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/inter_medium"
            android:text="@string/continue_st"
            android:textAllCaps="false"
            android:textColor="@color/button_text_color"
            android:textSize="18sp"
            android:visibility="visible"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintBottom_toTopOf="@+id/retakeBtn"
            app:layout_constraintLeft_toRightOf="@+id/retakeBtn"
            app:layout_constraintRight_toRightOf="parent" />


        <include
            android:id="@+id/imgPreviewFooter"
            layout="@layout/facia_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/resultParentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/facia_white_color"
        android:visibility="gone">

        <WebView
            android:id="@+id/animationViewUpload"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/footer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:adjustViewBounds="false"/>

        <WebView
            android:id="@+id/animationView"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/footer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:adjustViewBounds="false"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/animationBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="animationViewUpload,animationView" />

        <TextView
            android:id="@+id/resultTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/uploading"
            android:textColor="@color/dark_text_color"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="28dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:fontFamily="@font/inter_semi_bold"
            app:layout_constraintTop_toBottomOf="@+id/animationBarrier"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <android.widget.Button
            android:id="@+id/resultContinueBtn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/inter_medium"
            android:text="@string/continue_st"
            android:textAllCaps="false"
            android:textColor="@color/button_text_color"
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintBottom_toTopOf="@+id/footer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <include
            android:id="@+id/footer"
            layout="@layout/facia_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

