                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/instText1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:lineSpacingExtra="3sp"
                        app:layout_constraintTop_toTopOf="@+id/instIcon1"
                        app:layout_constraintBottom_toBottomOf="@+id/instIcon1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/instIcon1"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/cam_inst_1"
                        android:textColor="@color/facia_black_color"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@id/instIcon2"
                        android:layout_width="52dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="22dp"
                        android:background="@drawable/ic_plain_bg"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/instIcon1"/>

                    <TextView
                        android:id="@+id/instText2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:lineSpacingExtra="3sp"
                        app:layout_constraintRight_toRightOf="parent"
